    "_postman_id": "parcial3-microservicios-collection"
  },
  "item": [
    {
      "name": "Create - insert phone",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{ \"brand\": \"Samsung\", \"price\": 200 }" },
        "url": { "raw": "http://localhost:8081/phones", "protocol": "http", "host": ["localhost"], "port": "8081", "path": ["phones"] }
      }
    },
    {
      "name": "Read - list phones",
      "request": { "method": "GET", "url": { "raw": "http://localhost:8082/phones", "protocol": "http", "host": ["localhost"], "port": "8082", "path": ["phones"] } }
    },
    {
      "name": "Update - update phone",
      "request": {
        "method": "PUT",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{ \"brand\": \"Samsung Pro\", \"price\": 500 }" },
        "url": { "raw": "http://localhost:8083/phones/:id", "protocol": "http", "host": ["localhost"], "port": "8083", "path": ["phones", ":id"] }
      }
    },
    {
      "name": "Delete - delete phone",
      "request": { "method": "DELETE", "url": { "raw": "http://localhost:8084/phones/:id", "protocol": "http", "host": ["localhost"], "port": "8084", "path": ["phones", ":id"] } }
    }
  ]
}